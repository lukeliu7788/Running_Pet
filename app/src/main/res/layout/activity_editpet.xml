<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAdd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/petimgview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@mipmap/pet1"
        android:layout_weight="0.17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"/>


    <TableLayout
        android:id="@+id/edittable"
        android:layout_width="match_parent"
        android:layout_height="120pt">

        <TableRow
            android:id="@+id/edtrname"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >
            <TextView
                android:id="@+id/edtvname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name"
                android:gravity="fill"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/ededtname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@null"
                android:singleLine="true"
                android:maxLength="14"
                android:gravity="center_vertical"
                />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="@color/colorAdd"/>


        <TableRow
            android:id="@+id/ededtrgender"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >

            <TextView
                android:id="@+id/edtvgender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill"
                android:text="Gender" />

            <RadioGroup
                android:id="@+id/edrbggender"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <RadioButton
                    android:id="@+id/edrbmale"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="male"/>
                <RadioButton
                    android:id="@+id/edrbfemale"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="female"
                    />
            </RadioGroup>
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="@color/colorAdd"/>

        <TableRow
            android:id="@+id/edtrbreed"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >

            <TextView
                android:id="@+id/edtvbreed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Breed"
                android:gravity="fill"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/ededtbreed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:singleLine="true"
                android:maxLength="20"
                android:gravity="center_vertical|left"
                />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="@color/colorAdd"/>

        <TableRow
            android:id="@+id/edtrbsd"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >
            <TextView
                android:id="@+id/edtvbsd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Birthday"
                android:gravity="fill"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/edtvbir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textColor="@color/color5"
                android:textSize="18sp"
                android:gravity="center_vertical|left"
                android:layout_weight="1"
                />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="@color/colorAdd"/>

        <TableRow
            android:id="@+id/edtrArve"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >
            <TextView
                android:id="@+id/edtvArve"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Arriving time"
                android:gravity="fill"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/edtvarv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textColor="@color/color5"
                android:textSize="18sp"
                android:gravity="center_vertical|left"
                android:layout_weight="1"
                />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="@color/colorAdd"/>


        <TableRow
            android:id="@+id/edtrSt"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >
            <TextView
                android:id="@+id/edtvSt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sterilization"
                android:gravity="fill"
                android:layout_weight="1" />
            <RadioGroup
                android:id="@+id/edrbgster"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <RadioButton
                    android:id="@+id/edrbYes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Yes"
                    />
                <RadioButton
                    android:id="@+id/edrbNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="No"
                    />
            </RadioGroup>
        </TableRow>



    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

    </LinearLayout>

    <Button
        android:id="@+id/edpet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="EDIT"
        />

    <LinearLayout
        android:id="@+id/addcontent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

</LinearLayout>